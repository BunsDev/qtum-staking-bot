{
    "name": "qtum-staking-portal",
    "description": "A Telegram bot made to check my personal QTUM staking process status.",
    "author": "Federico Luzzi <fedeluzzi00@gmail.com>",
    "version": "1.0.0",
    "private": true,
    "dependencies": {
        "@babel/polyfill": "^7.6.0",
        "@mondora/env": "^1.3.0",
        "axios": "^0.19.0",
        "bluebird": "^3.7.0",
        "decimal.js": "^10.2.0",
        "telegraf": "^3.32.0",
        "telegraf-i18n": "^6.6.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.6.4",
        "@babel/core": "^7.6.4",
        "@babel/preset-env": "^7.6.3",
        "@commitlint/cli": "^8.2.0",
        "@commitlint/config-conventional": "^8.2.0",
        "babel-eslint": "^10.0.3",
        "dotenv": "^8.1.0",
        "eslint": "^6.5.1",
        "husky": "^3.0.9",
        "prettier": "^1.18.2"
    },
    "scripts": {
        "lint:code": "eslint \"src/**/*.js\"",
        "lint:prettier": "prettier -l src/**/*.js",
        "lint:commit-message": "commitlint -e",
        "lint:ci": "yarn lint:code && yarn lint:prettier",
        "build": "rimraf build && babel --copy-files -d build src",
        "start": "node build/",
        "start:dev": "yarn build && yarn start"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
